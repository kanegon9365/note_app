<li id="note-<%= note.id %>">
  <%= link_to gravatar_for(note.user, size: 36), note.user %>
  <span><%= link_to note.user.name, note.user %></span>
  <span><%= sample_time(note[:created_at]) %></span>
  <span><%=image_tag note.picture.url if note.picture? %></span>
  <span><%=link_to note.title ,"#" %></span>
  <span><%= note.content %></span>
  
  <span>
    
    <%= render "likes/like", note: note %>
    <%if current_user?(note.user)%>
     
     <%=link_to "編集",edit_note_path(note)%>
     <%=link_to "削除",note,method: :delete, data:{confirm:"本当？"}%>
    <%end%>
  </span>
</li>